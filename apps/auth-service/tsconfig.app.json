{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "out-tsc/auth-service",
    "types": ["node", "express"],
    "rootDir": "../../",
    "tsBuildInfoFile": "out-tsc/auth-service/tsconfig.app.tsbuildinfo",

    // ✅ Adjusted for CommonJS compatibility
    "module": "CommonJS", // ← Changed from ESNext
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    "src/swagger-output.json",
    "../../packages/**/*.ts"
  ],

  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
